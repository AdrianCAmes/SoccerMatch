@model Entity.Distrito

@{
    ViewBag.Title = "Edit Distrito " + Model.CDistrito;
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Distrito @Html.DisplayFor(model => model.CDistrito)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CDistrito)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CDistrito)
        </dd>
    </dl>

    <div class="form-group">
        @Html.LabelFor(model => model.NDistrito, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NDistrito, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NDistrito, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CCiudad.NCiudad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CCiudad.CCiudad,
                             new SelectList(ViewBag.ciudad, "CCiudad", "NCiudad"), "---Select---", "")
            @Html.ValidationMessageFor(model => model.CCiudad.CCiudad, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
