@model Entity.Calle

@{
    ViewBag.Title = "Edit Calle " + Model.CCalle;
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Calle: @Html.DisplayFor(model => model.NCalle)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CCalle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CCalle)
        </dd>
    </dl>

    @Html.HiddenFor(model => model.CCalle)

    <div class="form-group">
        @Html.LabelFor(model => model.NCalle, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NCalle, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NCalle, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CDistrito.NDistrito, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.DropDownListFor(model => model.CDistrito.CDistrito,
                             new SelectList(ViewBag.distrito, "CDistrito", "NDistrito"), "---Select---", "")
            @Html.ValidationMessageFor(model => model.CDistrito.CDistrito, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
